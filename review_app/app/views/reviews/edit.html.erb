<div class="container">
<h2>Edit Review </h2>
<%= form_for @review do |f| %>

<div class="form-group">
    <%= f.label :author %><br />
    <%= f.text_field :author, class:'form-control' %><br />
</div>
<div class="form-group">
    <%= f.label :product %><br />
    <%= f.select :product_id, Product.all.collect {|x| [x.name,
x.id]}, {:include_blank => 'Select Product'},class:'form-control'
%><br /><br />
</div>
<div class="form-group">
    <%= f.label :rating %><br />
    <%= f.text_field :rating, class:'form-control' %><br />
</div>
<div class="form-group">
    <%= f.label :content %><br />
    <%= f.text_area :content, class:'form-control' %><br />
</div>
<div class="form-group">
    <%= f.label :date %><br />
    <%= f.text_area :date, class:'form-control' %><br />
</div>
<%= f.submit "Submit", class:'btn btn-primary' %>
    <%=link_to "Cancel", reviews_path, class:'btn btn-default' %>
<% end %>
</div>
