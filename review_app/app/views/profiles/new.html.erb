<div class="container">
    <h2>Create User Account</h2>
<%= form_for @profile do |f| %>

<div class="field" style="100%">
    <% if @profile.errors.any? %>
        <div id="error_explanation">
        <h2>
        <%= pluralize(@profile.errors.count, "error") %>
        prohibted this from being saved:
        </h2>

<p>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        </ul>
    <% end %>
    </p>

<% if alert %>
        <%= alert %>
        <% end %>
    </div>
    <% end %>

<%= f.text_field :fname, placeholder: 'Enter your Full Name', class:
'form-control' %>

<%= f.email_field :email, placeholder: 'Enter your Email', class:
'form-control' %>

<%= f.date_field :dob, placeholder: 'Enter your Date of Birth', class:
'form-control' %>

<%= f.text_field :address, placeholder: 'Enter your Address', class:
'form-control' %>

<%= f.text_field :city, placeholder: 'Enter your City', class:
'form-control' %>

<%= f.text_field :country, placeholder: 'Enter your Country', class:
'form-control' %>

<%= f.password_field :password, placeholder: 'Create a Password',
class: 'form-control' %>

<%= f.password_field :password_confirmation, placeholder: 'Confirm
your Password', class: 'form-control' %>

    <%= f.submit 'Create Account' %>
    <% end %>
</div>
</div>