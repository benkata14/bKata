<div class="container">
<h1> Add New Product </h1>

<%= form_for :product, url: products_path do |f| %>
<div class="form-group">
<%= f.label :name %>
<%= f.text_field :name %>
</div> 

<div class="form-group">
<%= f.label :brand %>
<%= f.text_field :brand %>
</div>

<div class="form-group">
<%= f.label :cost %>
<%= f.text_field :cost %>
</div>

<div class="form-group">
<%= f.label :category %>
<%= f.text_field :category %>
</div> 

<div class="form-group">
<%= f.label :date %>
<%= f.text_field :date %>
</div> 

<div class="form-group">
<%= f.label :description %>
<%= f.text_area :description %>
</div>

<div class="form-group">
<%= f.submit %>
</div>
<% end %>
</div>