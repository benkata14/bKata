<div class="container">
<h2> All Products </h2>
<table border="1" class="table">

<tr>
    <th> Product Name </th>
    <th> Category </th>
    <th> Cost </th>
    <th> Product Page </th>
</tr>

<% @products.each do |product| %>

<tr>
<td> <%= product.name %> </td>
<td> <%= product.category %> </td>
<td> <%= product.cost %> </td>
<td> <%= link_to 'Product Page', product_path(product) %> </td>

</tr>
<% end %>
</table>
</div>